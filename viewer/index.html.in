<html ng-app="openSeadragonApp">
<head>
    <title>Data Viewer | (Re)Building A Kidney</title>
    <link rel='stylesheet' type='text/css' href='../styles/vendor/bootstrap.min.css'>
    <link rel='stylesheet' type='text/css' href='../styles/appheader.css'>
    <script src='../scripts/vendor/jquery-latest.min.js'></script>
    <script src='../scripts/vendor/angular.js'></script>
    <script src='../../../ermrestjs/js/ermrest.js'></script>
    <script src='../../../ermrestjs/js/ngermrest.js'></script>
    <script src='../viewer/app.js?v=ace7bc3834e8b251efa3b17533854304'></script>
    <script src='../chaise-config.js?v=bceb1440a28b0d8b4fd43d8388977e75'></script>
    <meta http-equiv="X-UA-Compatible" content="IE=10; IE=9; IE=8; IE=7; IE=EDGE" />
    <style>
        #annotations-control {
            height: 98vh;
            overflow: auto;
            border-right: 1px solid #ccc;
        }

        #viewer {
            position: fixed;
            left: 25%;
        }

        .annotation {
            padding: 10px;
            margin: 20px 0;
            border-radius: 3px;
            border: 1px solid #eee;
        }

        .annotation.highlighted {
            border-left: 5px solid #428bca;
        }

        .annotation.highlighted .comment, .comment:hover {
            color: #428bca;
        }

        .comment:hover {
            cursor: pointer;
        }

        /* TODO: Give the Edit and Delete buttons their own class */
        .annotation-control-button {
            margin: 2px;
            margin-right: 0;
        }
    </style>
</head>
<body>
    <div class="container-fluid" style="margin-top: 10px;">
        <div ng-controller="MainController" class="row">
            <div id="annotations-control" class="col-md-3">
                <!-- TODO: Perform form validation (e.g. no empty annotation descriptions) -->
                <div class="row">
                    <div class="col-md-12">
                        <span class="h2">Annotations</span><button ng-click="drawAnnotation();" class="btn btn-sm btn-success pull-right" type="button" role="button"><span class="glyphicon glyphicon-plus"></span>   New</button>
                    </div>
                </div>
                <br>
                <!-- Search Bar -->
                <div class="row">
                    <div class="col-md-12">
                        <input ng-model="query" class="form-control" type="search" placeholder="Search annotations">
                    </div>
                </div>
                <!-- Annotation Creation Form -->
                <div class="row">
                    <div class="col-md-12">
                        <div ng-if="createMode" class="annotation">
                            <form>
                                <div class="row">
                                    <div class="col-md-12">
                                        <p><strong>Create an Annotation:</strong></p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <textarea ng-model="newAnnotation.description" class="form-control" rows="3">Annotation text goes here</textarea><br>
                                        <select ng-model="newAnnotation.anatomy" class="form-control">
                                            <option ng-repeat="anatomy in anatomies track by $index">{{anatomy}}</option>
                                        </select>
                                    </div>
                                </div>
                                <br>
                                <div class="row">
                                    <div class="col-md-6">
                                        <button ng-click="cancelAnnotationCreation();" role="button" class="btn btn-xs btn-danger form-control" type="button">Cancel</button>
                                    </div>
                                    <div class="col-md-6">
                                        <button ng-click="createAnnotation(newAnnotation);" role="button" class="btn btn-xs btn-primary form-control" type="submit">Create</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- Annotations -->
                <div ng-repeat="annotation in annotations | orderBy:'-created' | filter:query as results track by annotation.id" class="annotation" ng-class="{highlighted: annotation.id === highlightedAnnotation}">
                    <div class="row">
                        <div class="col-md-10">
                            <!-- Annotation Date -->
                            <div class="row">
                                <div class="col-md-12">
                                    <small>{{annotation.created | date: 'MMM d, y'}}</small>
                                </div>
                            </div>
                            <!-- Annotation Text -->
                            <div class="row">
                                <div class="col-md-12">
                                    <br>
                                    <p ng-if="annotation.id !== editedAnnotation">
                                        <strong>Description</strong><br>
                                        <span ng-click="setHighlightedAnnotation(annotation.id);highlightAnnotation(annotation);" class="comment">{{annotation.description}}</span>
                                    </p>
                                </div>
                            </div>
                            <!-- Annotation Anatomy -->
                            <div class="row">
                                <div class="col-md-12">
                                    <p ng-if="annotation.id !== editedAnnotation;annotation.anatomy">
                                        <strong>Anatomy</strong><br>
                                        <span ng-click="setHighlightedAnnotation(annotation.id);highlightAnnotation(annotation);" class="comment">{{annotation.anatomy}}</span>
                                    </p>
                                </div>
                            </div>
                            <!-- Annotation Edit Form -->
                            <div class="row">
                                <div class="col-md-12">
                                    <form ng-if="annotation.id === editedAnnotation">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <label>Description</label>
                                                <textarea ng-model="annotation.description" class="form-control" rows="3"></textarea>
                                            </div>
                                        </div>
                                        <br>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <label>Anatomy</label>
                                                <select ng-model="annotation.anatomy" class="form-control">
                                                    <option ng-repeat="anatomy in anatomies track by $index">{{anatomy}}</option>
                                                </select>
                                            </div>
                                        </div>
                                        <br>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <button ng-click="cancelAnnotationEdit(annotation);" role="button" class="btn btn-xs btn-danger form-control" type="button">Cancel</button>
                                            </div>
                                            <div class="col-md-6">
                                                <button ng-click="saveAnnotation(annotation);" role="button" class="btn btn-xs btn-primary form-control" type="button">Save</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <!-- Edit and Delete buttons -->
                        <div class="col-md-2">
                            <div class="row">
                                <div class="col-md-12">
                                    <button ng-if="annotation.id !== editedAnnotation" ng-click="editAnnotation(annotation);" title="Edit Annotation" class="btn btn-sm btn-primary pull-right annotation-control-button" role="button" type="button"><span class="glyphicon glyphicon-pencil"></span></button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <button ng-if="annotation.id !== editedAnnotation" ng-click="setHighlightedAnnotation(annotation.id);highlightAnnotation(annotation);" title="Highlight Annotation" class="btn btn-sm btn-warning pull-right annotation-control-button" role="button" type="button"><span class="glyphicon glyphicon-search"></span></button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <button ng-if="annotation.id !== editedAnnotation" ng-click="deleteAnnotation(annotation);" title="Delete Annotation" class="btn btn-sm btn-danger pull-right annotation-control-button" role="button" type="button"><span class="glyphicon glyphicon-trash"></span></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br>
                <p ng-if="annotations.length == 0 || results.length == 0">No annotations found.</p>
            </div>
            <!-- iframe viewer -->
            <div ng-if="viewerSource" id="viewer" class="col-md-9">
                <iframe id="viewer" width="74%" height="100%" ng-src="{{viewerSource | trusted}}" frameBorder="0">
                    &lt;p&gt;Your browser does not support iframes.&lt;/p&gt;
                </iframe>
            </div>
        </div>
    </div>
</body>
</html>
